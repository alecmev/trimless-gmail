{
    "manifest_version": 2,
    "name": "Trimless for Google Mail™",
    "description": "Automatically shows trimmed content in Google Mail™.",
    "version": "1.8",

    "icons":
    {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "content_scripts":
    [{
        "matches": [ "https://mail.google.com/mail/*" ],
        "js": [ "jquery-2.0.3.min.js", "trimless-gmail.js" ],
        "css": [ "trimless-gmail.css" ],
        "all_frames": true
    }]
}
