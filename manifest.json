{
    "manifest_version": 2,
    "name": "Trimless for Google Mail™",
    "description": "Automatically shows trimmed content in Google Mail™.",
    "version": "1.3",
    "icons": { "128": "icon128.png" },

    "permissions":
    [
        "https://*/mail/u/*"
    ],

    "content_scripts":
    [{
        "matches": ["https://*/mail/u/*"],
        "js":
        [
            "jquery-1.9.1.min.js",
            "trimless-gmail.js"
        ],
        "all_frames": true,
        "run_at" : "document_idle"
    }]
}
