{
    "manifest_version": 2,
    "name": "Trimless for Google Mail™",
    "description": "Automatically shows trimmed content in Google Mail™.",
    "version": "1.7.1",

    "icons":
    {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "content_scripts":
    [{
        "matches": [ "https://*/mail/*" ],
        "js": [ "jquery-1.9.1.min.js", "trimless-gmail.js" ],
        "all_frames": true
    }]
}
